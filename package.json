{
    "name": "react4xp-build-entriesandchunks",
    "version": "0.0.1",
    "description": "React4xp helper: webpack-config-usable methods for generating entries and chunks from JS / ES6 / JSX files under a subfolder",
    "main": "lib/index.js",
    "scripts": {
        "clean": "rimraf lib",
        "webpack": "webpack --config webpack.config.js",
        "babel-min": "babel src -d lib --no-comments --minified --compact true",
        "babel": "babel src -d lib --no-comments",
        "cpjson": "copyfiles --flat src/*.json lib",
        "prepare": "npm run checkall",
        "eslint": "node_modules/eslint/bin/eslint.js ./*.js src/",
        "checkall": "npm run eslint && npm run clean && npm run cpjson && npm run babel && npm run test",
        "test": "NODE_PATH=./ mocha --compilers js:babel-core/register --require babel-polyfill --require test/test_helper.js \"test/**/*@(.js)\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/enonic/react4xp-build-entriesandchunks.git"
    },
    "author": "Espen Norderud",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/enonic/react4xp-build-entriesandchunks/issues"
    },
    "homepage": "https://github.com/enonic/react4xp-build-entriesandchunks",
    "dependencies": {
        "chunks-2-json-webpack-plugin": "^1.0.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-eslint": "^7.1.1",
        "babel-loader": "^7.1.5",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-polyfill": "6.20.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "babel-register": "^6.26.0",
        "chai": "3.5.0",
        "copyfiles": "^2.1.0",
        "deep-freeze": "^0.0.1",
        "eslint": "3.14.0",
        "eslint-plugin-react": "^7.12.4",
        "mocha": "^5.2.0",
        "rimraf": "^2.6.3",
        "webpack": "^4.29.5",
        "webpack-cli": "^3.2.3",
        "webpack-node-externals": "^1.7.2"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ],
        "plugins": [
            "transform-object-rest-spread"
        ]
    }
}
